#--------------------------------------------------------------
# Terraform Variables Example File
#--------------------------------------------------------------
# Copy this file to terraform.tfvars and customize the values
# cp terraform.tfvars.example terraform.tfvars
#--------------------------------------------------------------

# Resource Group Configuration
resource_group_name = "myRG"
location            = "centralindia"

# Virtual Network Configuration
vnet_name          = "myvnet"
vnet_address_space = ["10.0.0.0/16"]

# Subnet A Configuration (Application Tier)
subnet_a_name   = "subnetA"
subnet_a_prefix = ["10.0.1.0/24"]

# Subnet B Configuration (Database Tier)
subnet_b_name   = "subnetB"
subnet_b_prefix = ["10.0.2.0/24"]

# Tags
tags = {
  Environment = "Development"
  ManagedBy   = "Terraform"
  Project     = "Azure-VNet-Demo"
  Owner       = "Atul Kamble"
  CostCenter  = "Engineering"
}
